@model MoencoPOS.Models.Branch
@using MoencoPOS.Security;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/NewTheme _MainLayout_Sidebar.cshtml";
    var user = (MyIdentityUser)HttpContext.Current.Session["USER_INFO"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register Branch</title>
</head>
<body>

    <div class="row">
        <div class="col-md-11">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-green-sharp">
                        <i class="icon-list font-green-sharp"></i>
                        <span class="caption-subject bold uppercase">Create Branch</span>
                    </div>
                    <div class="tools">
                        <a href="#" class="collapse" data-original-title="" title=""></a>
                    </div>
                    <div class="actions">
                        <a class="btn green btn-sm" data-buttontype="btn_save" onclick="javascript: document.getElementById('frm_create_branch').submit()" data-submittedform="frm_create_branch"><span class="fa fa-save"></span> Save</a>
                        <a class="btn red btn-sm" href="@Url.Action("Index", "Branches")"><span class="fa fa-times-circle"></span> Cancel</a>
                        <a class="btn btn-icon-only btn-default fullscreen"></a>
                    </div>
                </div>
                <div class="portlet-body row">
                    @using (Html.BeginForm("Create", "Branches", FormMethod.Post, new { id = "frm_create_branch", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken();
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-offset-1 col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.BranchName, new { @class = "col-sm-4 control-label" })
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.BranchName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.BranchName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.BranchLocation, new { @class = "col-sm-4 control-label" })
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.BranchLocation, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.BranchLocation, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.BranchDescription, new { @class = "col-sm-4 control-label" })
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.BranchDescription, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.BranchDescription, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    }
                    @ViewBag.Message
                </div>
            </div>
        </div>
    </div>
</body>
</html>
